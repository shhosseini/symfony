{# src/NEWS/BlogBundle/Resources/views/Page/registration.html.twig #}
{% extends 'NEWSBlogBundle::layout.html.twig' %}

{% block title %}{{ 'Registration'|trans }}{% endblock%}

{% block body %}
    <header>
        <h1>{{ 'Registration'|trans }}:</h1>
    </header>

    {% if app.session.hasFlash('blogger-notice') %}
        <div class="blogger-notice">
            {{ app.session.flash('blogger-notice') }}
        </div>

    {% endif %}

    <form action="{{ path('create') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}


        {{ form_row(form.Name) }}
        {{ form_row(form.Surname) }}
        {{ form_row(form.username) }}
        {{ form_row(form.password) }}
        {{ form_row(form.category) }}


        {{ form_rest(form) }}


        <input type="submit" value="{{ 'Submit'|trans }}" />
    </form>
{% endblock %}


